<!DOCTYPE html>
<html>
<head>
  <title>Vacation Rentals, Homes, Apartments & Rooms for Rent - Waterbnb</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if yield(:page) == 'home' %>
    <%= render 'nav/home_nav' %>
  <% else %>
    <%= render 'nav/nav' %>
  <% end %>

  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>
  <div class="main-container">
    <%= yield %>
  </div>
</body>
</html>
