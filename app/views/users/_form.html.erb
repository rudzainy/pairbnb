<%= form.email_field :email, class: 'form-control full-width-92', placeholder: 'Email Address', required: true %>
<%= form.password_field :password, class: 'form-control full-width-92', placeholder: :password, required: true %>
<%= form.password_field :password_confirmation, class: 'form-control full-width-92', placeholder: :password_confirmation, required: true %>